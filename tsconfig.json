{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"], // Includes essential libraries for a web project
    "allowJs": true, // Allows JavaScript files to be included
    "skipLibCheck": true, // Skips type checking of declaration files for faster compilation
    "strict": true, // Enables all strict type-checking options
    "noEmit": true, // Prevents TypeScript from emitting compiled files
    "esModuleInterop": true, // Enables compatibility with CommonJS and ES Modules
    "module": "esnext", // Uses the latest module system
    "moduleResolution": "bundler", // Resolves modules using bundler-like resolution (e.g., Webpack, Vite)
    "resolveJsonModule": true, // Allows importing JSON files
    "isolatedModules": true, // Ensures each file is treated as a separate module
    "jsx": "preserve", // Keeps JSX as-is for further transformation by Babel or another tool
    "incremental": true, // Enables incremental compilation for faster builds
    "plugins": [
      {
        "name": "next" // Includes Next.js-specific TypeScript plugin
      }
    ],
    "paths": {
      "@/*": ["./*"] // Sets up path aliases
    }
  },
  "include": [
    "next-env.d.ts", // Includes the Next.js environment declarations
    "**/*.ts", // Includes all TypeScript files
    "**/*.tsx", // Includes all TypeScript JSX files
    ".next/types/**/*.ts" // Includes type definitions generated by Next.js
, "components/shared/Collection"  ],
  "exclude": ["node_modules"] // Excludes node_modules directory
}
